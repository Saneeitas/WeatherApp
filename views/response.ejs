<%- include("partials/header"); -%>
<div class="container">
  <div class="container-fluid my-3">
    <div class="row">
      <div class="px-4 py-5 my-5 text-center">
        <img
          class="d-block mx-auto mb-4"
          src="<%=imageURL%>"
          alt=""
          width="150"
          height="150"
        />
        <h1 class="display-5 fw-bold" style="color: #3b7fad"><%= city %></h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4">The weather is <%=desc%></p>
          <h1>The temperature is currently <%=temp%> Degrees Celcius.</h1>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer"); -%>
